        <Label x:Name="l7" Content="" HorizontalAlignment="Left" Margin="422,228,0,0" VerticalAlignment="Top" Width="179" RenderTransformOrigin="0.498,0.429"/>
        <Label x:Name="l8" Content="" HorizontalAlignment="Left" Margin="422,259,0,0" VerticalAlignment="Top" Width="179" RenderTransformOrigin="0.498,0.429"/>
        <Label x:Name="l9" Content="" HorizontalAlignment="Left" Margin="422,290,0,0" VerticalAlignment="Top" Width="179" RenderTransformOrigin="0.498,0.429"/>
