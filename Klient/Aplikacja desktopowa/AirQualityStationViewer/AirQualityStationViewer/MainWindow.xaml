        <TextBox x:Name="textbox_epaper" HorizontalAlignment="Left" Height="50" Margin="138,175,0,0" TextWrapping="Wrap" Text="Write here" VerticalAlignment="Top" Width="250"/>
        <Button x:Name="button_show_airqualitystation" Content="Display data from AirQualityStation" HorizontalAlignment="Left" Margin="10,230,0,0" VerticalAlignment="Top" Width="203" Height="49" Click="Button_show_airqualitystation_Click"/>
